<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-4 rounded shadow-lg">
    <div>
      <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-green-600.svg" alt="Workflow">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign up
      </h2>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <%= f.input :email, require: true, autofocus: true, placeholder: 'Email address', input_html: { autocomplete: "email", class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm mb-0' }, label_html: { class: "sr-only" } %>
        <%= f.input :password, required: true, placeholder: 'Password', input_html: { autocomplete: 'new-password', class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-green-500 focus:border-green-500 focus;z-10 sm:text-sm' }, label_html: { class: 'sr-only' }, wrapper_html: { class: '!mb-4' } %>
        <%= f.input :password_confirmation, required: true, placeholder: 'Confirm password', input_html: { autocomplete: 'new-password', class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-green-500 focus:border-green-500 focus;z-10 sm:text-sm' }, label_html: { class: 'sr-only' }, wrapper_html: { class: '!mb-4' } %>
        <div class="flex items-center justify-start !mb-4">
          <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name), class: 'text-sm font-medium text-green-600 hover:text-green-500' %>
        </div>
        <%= f.button :button, type: :submit, class: 'group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm !font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500' do %>
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-green-500 group-hover:text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          Sign up
        <% end %>
      </div>
    <% end %>
    <div class="flex justify-end !mt-1">
      <%= link_to "Sign in", new_user_session_path, class: 'text-sm font-medium text-green-600 hover:text-green-500 align-right' %>
    </div>
  </div>
</div>
