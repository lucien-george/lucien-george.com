<%= content_for :meta_title, "New Education" %>

<div class="grid grid-cols-12">
  <div class="card">
    <h2 class="mb-3 text-white text-center">New school</h2>
    <%= simple_form_for @school do |f| %>
      <div class="mb-3">
        <%= f.input :name, placeholder: 'Name', wrapper_html: { class: 'mb-0' }, input_html: { class: 'form-input rounded-none rounded-t-md' }, label_html: { class: 'sr-only' } %>
        <%= f.input :city, placeholder: 'City name', wrapper_html: { class: 'mb-0' }, input_html: { class: 'form-input rounded-none rounded-t-md' }, label_html: { class: 'sr-only' } %>
      </div>
      <%= f.submit class: 'btn-primary w-full' %>
    <% end %>
  </div>
  <div class="card">
    <h2 class="mb-3 text-white text-center">New education</h2>
    <%= simple_form_for @education do |f| %>
      <div class="mb-3">
        <%= f.input :degree, placeholder: 'Name', wrapper_html: { class: 'mb-0' }, input_html: { class: 'form-input rounded-none rounded-t-md' }, label_html: { class: 'sr-only' } %>
        <%= f.association :school, prompt: 'Choose a school', collection: @schools, label_html: { class: 'sr-only' }, input_html: { class: 'form-input mb-3' } %>
        <%= f.rich_text_area :description, input_html: { class: 'form-input' } %>
        <div class="flex items-center justify-around w-full">
          <%= f.input :start_date, html5: true, legend_tag: false, wrapper_html: { class: 'w-full date-wrapper mr-2' }, input_html: { class: '!w-full form-input' }, label_html: { class: 'sr-only' } %>
          <i class="fas fa-long-arrow-alt-right"></i>
          <%= f.input :end_date, html5: true, legend_tag: false, wrapper_html: { class: 'w-full date-wrapper ml-2' }, input_html: { class: '!w-full form-input' }, label_html: { class: 'sr-only' } %>
        </div>
      </div>
      <%= f.submit class: 'btn-primary w-full' %>
    <% end %>
  </div>
</div>
