<%= content_for :meta_title, 'Websites' %>

<div class="overflow-hidden w-screen fixed min-h-wrapper"
     data-controller="carousel"
     data-carousel-current-value="0"
     data-carousel-next-value="1"
     data-carousel-previous-value="-1"
     data-carousel-next-class="next"
     data-carousel-previous-class="previous">
  <% @websites.each_with_index do |websites, index| %>
    <div class="websites <%= class_names(active: index.zero?, next: index.positive?) %>"
         data-index="<%= index %>"
         data-carousel-target="slide">
      <%= render Websites::WebsitesPhoneComponent.new(websites: websites) %>
    </div>
  <% end %>
  <%= render Websites::NavComponent.new %>
</div>
