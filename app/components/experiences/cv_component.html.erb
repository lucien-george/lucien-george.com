<div class="p-3">
  <div class="flex items-center justify-between mb-1 w-full">
    <h1 class="uppercase mb-0 mr-2">lucien george</h1>
    <%= link_to experiences_path(format: :pdf), class: 'btn-primary hover:bg-gray-900 hover:text-white transition-colors' do %>
      <div class="flex items-center"><span>download</span><i class="fal fa-download ml-2"></i></div>
    <% end %>
  </div>
  <div class="flex justify-between items-end w-full">
    <h3 class="uppercase">fullstack developer</h3>
    <div class="flex justify-end items-center flex-col sm:flex-row">
      <%= link_to User::GITHUB_URL, target: :blank, class: 'sm:mr-4' do %>
        <span class="text-white sm:text-black"><i class="fab fa-github"></i> /luciengeorge</span>
      <% end %>
      <%= link_to User::LINKEDIN_URL, target: :blank do %>
        <span class="text-white sm:text-black"><i class="fab fa-linkedin-in"></i> /luciengeorge</span>
      <% end %>
    </div>
  </div>
</div>
<hr class="my-5 mx-3">
<div class="grid grid-cols-2">
  <div class="col-span-2 sm:col-span-1 text-white p-3">
    <div>
      <div class="relative inline-block mb-3">
        <h4 class="font-normal uppercase mb-1">Contact</h4>
        <div class="absolute bottom-0 left-0 bg-white w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex flex-col mb-3">
      <span class="text-sm text-gray-200 mb-1"><i class="fal fa-phone-alt mr-2"></i><%= link_to '+44 7845 714513', 'tel:+447845714513', class:"text-gray-200" %></span>
      <span class="text-sm text-gray-200 mb-1"><i class="fal fa-envelope mr-2"></i><%= link_to 'me@lucien-george.com', 'mailto:me@lucien-george.com', class:"text-gray-200" %></span>
      <span class="text-sm text-gray-200 mb-1"><i class="fal fa-map-marker-alt mr-2"></i>London, UK</span>
    </div>
    <div>
      <div class="relative inline-block mb-3">
        <h4 class="mb-1 font-normal uppercase text-white">Education</h4>
        <div class="absolute bottom-0 left-0 bg-white w-1/2 h-0.5"></div>
      </div>
    </div>
    <div>
      <% educations.each do |education| %>
        <%= render EducationComponent.new(education: education, download: download) %>
      <% end %>
    </div>
    <div>
      <div class="relative inline-block my-3">
        <h4 class="mb-1 font-normal uppercase text-white">Programming</h4>
        <div class="absolute bottom-0 left-0 bg-white w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex items-center justify-start flex-wrap">
      <% programming_languages.each do |language| %>
        <span class="badge text-white mr-2 mb-1"><%= language %></span>
      <% end %>
    </div>
    <div>
      <div class="relative inline-block my-3">
        <h4 class="mb-1 font-normal uppercase text-white">Languages</h4>
        <div class="absolute bottom-0 left-0 bg-white w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex items-center justify-start flex-wrap">
      <% spoken_languages.each do |language| %>
        <span class="badge text-white mr-2 mb-1"><%= language %></span>
      <% end %>
    </div>
  </div>
  <div class="col-span-2 sm:col-span-1 p-3">
    <div class="relative inline-block mb-3">
      <h4 class="mb-1 font-normal uppercase text-white sm:text-black">Experiences</h4>
      <div class="absolute bottom-0 left-0 bg-white sm:bg-black w-1/2 h-0.5"></div>
    </div>
    <div class="flow-root">
      <ul>
        <% experiences.each_with_index do |experience, index| %>
          <%= render Experiences::ExperienceComponent.new(
                experience: experience,
                previous_experience: index.zero? ? nil : experiences[index - 1],
                next_experience: index == experiences.size - 1 ? nil : experiences[index + 1],
                download: download
              ) %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
