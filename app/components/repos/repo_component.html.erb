<div class="repo-card border-l-2 flex flex-col justify-between" style="border-color: <%= repo.language&.color %>" data-controller="modal" data-action="keyup@window->modal#closeWithKeyboard">
  <%= render Repos::BreadcrumbsComponent.new(repo: repo) %>
  <div class="flex flex-wrap">
    <% repo.languages.each do |language| %>
      <span class="badge mr-2 mb-2" style="background-color: <%= language.color %>33; color: <%= language.color %>; border-color: <%= language.color %>;"><%= language.name %></span>
    <% end %>
  </div>
  <div class="flex items-end">
    <% contributors.first(10).each_with_index do |contributor, index| %>
      <%= link_to contributor.profile_url, target: :blank, class: "popover inline-block transition-all duration-300 #{class_names('hover:ml-1 -ml-2' => index.positive?)}", data: { controller: 'tippy', tippy_content_value: contributor.login } do %>
        <%= image_tag contributor.avatar_url, alt: contributor.login, class: "avatar-sm avatar-bordered" %>
      <% end %>
    <% end %>
    <% if contributors.size > 10 %>
      <small>
        <%= link_to '#', data: { action: 'click->modal#toggle' }, class:'ml-2 text-gray-500 hover:text-gray-700' do %>
          <i class="fas fa-plus"></i><%= contributors.size - 10 %>
        <% end %>
      </small>
      <div class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-modal-target="wrapper">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
              aria-hidden="true"
              data-transition-enter="ease-out duration-300"
              data-transition-enter-start="opacity-0"
              data-transition-enter-end="opacity-100"
              data-transition-leave="ease-in duration-200"
              data-transition-leave-start="opacity-100"
              data-transition-leave-end="opacity-0"
              data-modal-target="overlay"
              data-action="click->modal#toggle"></div>
          <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
          <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-sm sm:w-full sm:p-6"
              data-transition-enter="ease-out duration-300"
              data-transition-enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
              data-transition-enter-leave="opacity-100 translate-y-0 sm:scale-100"
              data-transition-leave="ease-in duration-200"
              data-transition-leave-start="opacity-100 translate-y-0 sm:scale-100"
              data-transition-leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
              data-modal-target="modal">
            <div>
              <div class="mt-3 text-center sm:mt-5">
                <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                  Contributors
                </h3>
                <div class="mt-2">
                  <% contributors.each do |contributor| %>
                    <div class="my-2">
                      <%= link_to contributor.profile_url, target: :blank do %>
                        <div class="flex w-full justify-between items-center">
                          <div class="flex items-center w-full">
                            <%= image_tag contributor.avatar_url, alt: contributor.login, class: "avatar-sm avatar-bordered" %>
                            <p class="m-0 text-gray-500 hover:text-gray-700"><%= contributor.login %></p>
                          </div>
                          <small class="text-gray-500 hover:text-gray-700"><%= contributor.commits.where(repo: repo).size %></small>
                        </div>
                      <% end %>
                    </div>
                    <hr>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="mt-5 sm:mt-6">
              <button type="button" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm" data-action="click->modal#toggle">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
