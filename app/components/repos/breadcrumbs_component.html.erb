<div class="flex mb-3" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2">
    <% path_sections.each_with_index do |section, index| %>
      <li>
        <div class="flex items-center">
          <% if index.zero? %>
            <i class="fab fa-github text-gray-900"></i>
          <% else %>
            <svg class="flex-shrink-0 h-5 w-5 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
          <% end %>
          <%= link_to section, index.zero? ? "#{url}/#{section}" : "#{url}/#{path}", class: 'ml-2 text-sm font-medium text-gray-500 hover:text-gray-700', target: :blank %>
          <% if index == path_sections.size - 1 && repo.private? %>
            <i class="fas fa-lock ml-2"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ol>
</div>
