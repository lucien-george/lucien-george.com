<nav data-controller="dropdown nav-menu">
  <div class="max-w-7xl mx-auto px-2 sm:px-0">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button type="button"
                class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                aria-controls="mobile-menu"
                aria-expanded="false"
                data-menu-nav-target="button"
                data-action="click->nav-menu#toggle">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" data-nav-menu-target="openIcon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" data-nav-menu-target="closeIcon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <h3 class="logo-neon">lucien-george.com</h3>
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <%= render Navbar::LinksComponent.new(klasses: 'nav-link') %>
          </div>
        </div>
      </div>
      <% if user_signed_in %>
        <%= render Navbar::DropdownComponent.new %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: 'text-gray-500 hover:bg-gray-300 hover:bg-opacity-25 hover:text-gray-900 px-4 py-2 rounded-full text-sm font-medium' %>
      <% end %>
    </div>
  </div>

  <div class="hidden sm:hidden" id="mobile-menu" data-nav-menu-target="menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= render Navbar::LinksComponent.new(klasses: 'menu-link') %>
    </div>
  </div>
</nav>
