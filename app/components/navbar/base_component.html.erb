<div data-controller="menu" data-menu-active-class="active" data-menu-scale-class="scale-0">
  <div class="fixed w-screen h-screen bg-black z-50 opacity-60 transform transition-none scale-0"
       data-menu-target="background"
       data-action="click->menu#toggle"></div>
  <nav class="flex w-full items-center justify-between px-4 py-4 z-50 relative">
    <%= link_to root_path do %>
      <%= image_tag 'logo.svg', class: 'logo', alt: 'logo' %>
    <% end %>
    <div class="flex items-center">
      <% if current_page?(root_path) %>
        <%= link_to '#', class: 'inline-block text-black mr-3 z-10', data: { action: 'click->styles#skip', controller: 'tippy', tippy_content_value: 'Fast forward animation', styles_target: 'skipCta', disable_with: 'skipping...' } do %>
          <i class="fal fa-fast-forward"></i>
        <% end %>
      <% end %>
      <div class="menu-wrapper relative" data-action="click->menu#toggle keyup@window->menu#toggle">
        <div class="menu-ring" data-menu-target="ring">
          <div class="cube-wrapper" data-menu-target="cubeWrapper">
            <div class="cube">
              <div class="face top" data-menu-target="face"></div>
              <div class="face bottom" data-menu-target="face"></div>
              <div class="face left" data-menu-target="face"></div>
              <div class="face right" data-menu-target="face"></div>
              <div class="face front" data-menu-target="face"></div>
              <div class="face back" data-menu-target="face"></div>
            </div>
          </div>
        </div>
        <div class="menu" data-menu-target="menu">
          <%= link_to root_path, class: class_names('nav-link', { active: current_page?(root_path) }) do %>
            <i class="fal fa-home-alt link-icon"></i>
          <% end %>
          <%= link_to websites_path, class: class_names('nav-link', { active: current_page?(websites_path) }) do %>
            <i class="fal fa-browser link-icon"></i>
          <% end %>
          <%= link_to experiences_path, class: class_names('nav-link', { active: current_page?(experiences_path) }) do %>
            <i class="fal fa-file-user link-icon"></i>
          <% end %>
          <%= link_to repos_path, class: class_names('nav-link', { active: current_page?(repos_path) }) do %>
            <i class="fab fa-github link-icon"></i>
          <% end %>
          <% if user_signed_in %>
            <%= link_to new_website_path, class: class_names('nav-link', { active: current_page?(new_website_path) }) do %>
              <div class="relative">
                <i class="fal fa-browser link-icon"></i>
                <i class="fal fa-plus link-icon absolute text-base bottom-0.5 right-2"></i>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</div>
